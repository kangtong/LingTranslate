<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
  >
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

      <EditText
          android:id="@+id/edit_iciba_translate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:hint="请输入翻译内容"/>
    </android.support.design.widget.TextInputLayout>
    <com.dd.CircularProgressButton
        android:id="@+id/btn_iciba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        app:cpb_textIdle="翻译"
        app:cpb_textComplete="成功"
        app:cpb_textError="失败"
        app:cpb_cornerRadius="40dp"
        app:cpb_selectorIdle="@drawable/selector_circular_button"
    />
    <LinearLayout
        android:id="@+id/linear_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
    >


      <LinearLayout
          android:id="@+id/linear_tool"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_gravity="right"
          android:gravity="center"
      >
        <ImageButton
            android:id="@+id/btn_iciba_phonetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:layout_marginRight="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
        />
        <ImageButton
            android:id="@+id/btn_iciba_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_content_copy_black_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
        />
        <com.github.ivbaranov.mfb.MaterialFavoriteButton
            android:id="@+id/btn_iciba_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      </LinearLayout>
      <TextView
          android:id="@+id/text_explains"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:textSize="18sp"
          tools:text="adj. （男子）英俊的；可观的；大方的，慷慨的；健美而端庄的"
      />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
      >
        <TextView
            android:id="@+id/text_phonetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            tools:text="英：'hænsəm     美：'hæns(ə)m"
        />
        <ImageButton
            android:id="@+id/btn_iciba_uk_phonetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
        />
      </LinearLayout>

      <LinearLayout android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
      >
        <TextView
            android:id="@+id/text_us_phonetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            tools:text="英：'hænsəm     美：'hæns(ə)m"
        />
        <ImageButton
            android:id="@+id/btn_iciba_us_phonetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
        />
      </LinearLayout>
      <TextView
          android:id="@+id/text_exchange"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:textSize="18sp"
          tools:text="过去式：smiled\n过去完成时：smiled"/>
    </LinearLayout>
  </LinearLayout>
</android.support.v4.widget.NestedScrollView>