<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.translate.TranslateFragment" android:orientation="vertical">
  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">
      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent" android:layout_marginTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入翻译内容" android:id="@+id/edit_translate"
            android:minLines="4"
            android:gravity="top"/>
      </android.support.design.widget.TextInputLayout>
      <Button
          android:text="翻译"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" android:id="@+id/btn_translate"
          android:layout_weight="1"
          android:background="@color/colorAccent"
      />
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content" android:id="@+id/cardview_youdao"
          android:visibility="gone" android:padding="14dp"
          android:layout_marginTop="12dp"
          app:cardElevation="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/text_youdao_translate"
              android:textSize="24sp"
              tools:text="翻译内容"
          />
          <TextView
              android:id="@+id/text_youdao_us_phonetic"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/text_youdao_uk_phonetic"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/text_youdao_explains"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

        </LinearLayout>
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content" android:id="@+id/cardview_baidu"
          android:visibility="gone" android:padding="14dp"
          android:layout_marginTop="12dp"
          app:cardElevation="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/text_baidu_translate"
              android:textSize="24sp"/>
        </LinearLayout>
      </android.support.v7.widget.CardView>
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>
</FrameLayout>
